{% extends 'base.html.twig' %}

{% block body %}

<script src="https://cdn.auth0.com/js/lock-6.7.min.js"></script>
<script type="text/javascript">
    var lock = new Auth0Lock('OZ9ytsylM8CDlC3A0ciEOhx12ul2edbm', 'wptest.auth0.com');

    function signin() {
        lock.show({
            callbackURL: 'http://localhost:8000/auth0/callback'
            , responseType: 'code'
            , authParams: {
                scope: 'openid name email'
            }
        });
    }
</script>
<button onclick="signin()">Login</button>

{% endblock %}